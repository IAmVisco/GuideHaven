@page
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<IdentityLocalizer> Localizer
@model ExternalLoginModel
@{
    ViewData["Title"] = Localizer["Register"];
}

<h2>@ViewData["Title"]</h2>
<h4>@Localizer["Associate"] @Model.LoginProvider @Localizer["Account"].</h4>
<hr />

<p class="text-info">
    @Localizer["AuthSuccess"] <strong>@Model.LoginProvider</strong>.
    @Localizer["EnterLogin"]
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Login"></label>
                <input asp-for="Input.Login" class="form-control" />
                <span asp-validation-for="Input.Login" class="text-danger"></span>
            </div>
            @if(Model.IsEmailRequired)
            {
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            }
            <button type="submit" class="btn btn-primary">@Localizer["Register"]</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


